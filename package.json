{
  "name": "vite-ssr-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "main": "dist/server/main.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "lint": "run-s lint:*",
    "build:client": "vite build --mode production",
    "build:server": "esbuild --bundle --platform=node --target=node16 --minify --packages=external --format=esm --splitting --outdir=dist/server src/server/main.js",
    "build": "run-s build:*",
    "test": "npm run lint",
    "start": "node -r dotenv-flow/config ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "esbuild": "^0.17.5",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "node-fetch": "^3.3.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "vite": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
